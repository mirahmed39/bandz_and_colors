<div class="form-group form-container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="GET" action="">
                <label for="red">RED:</label>
                <input type="number" class="input-box form-control" id="red" name="red">
                <label for="green">GREEN:</label>
                <input type="number" class="input-box form-control" id="green" name="green">
                <label for="blue">BLUE:</label>
                <input type="number" class="input-box form-control" id="blue" name="blue">
                <label for="total">HOW MANY?:</label>
                <input type="number" class=" input-box form-control" id="total" name="total"> <br>
                <input type="submit" class="btn btn-warning input-box form-control" value="Generate Color Pallete">
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

<ul class="colors-container">
{{#each colors as |color|}}
    <div class="badge badge-pill" style="background-color:{{color.hex}}; height: 50px; margin-bottom: 5px; color: white;">
        <p class="lead">{{color.name}} {{color.hex}} Rgb({{color.red}}, {{color.green}}, {{color.blue}})</p>
    </div>
{{/each}}
</ul>

{{#if errorMessage}}
<div class="alert alert-danger" role="alert">{{errorMessage}}</div>
{{/if}}